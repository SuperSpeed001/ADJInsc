
@model ADJInsc.Models.ViewModels.InscViewModel

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
@Html.AntiForgeryToken()
<h3></h3>




<table id="tablaFamilia" class="table table-striped table-responsive" cellspacing="0" width="100%">
    <!--table table-sm table-striped table-hover border-bottom table table-bordered mb-0-->
    <thead>
        <tr>

            <th>
                Nombre y Apellido
            </th>
            <th>
                Número de Documento
            </th>
            <th>
                Nacimiento
            </th>
            <th>
                Discapacidad ?
            </th>
            <th>
                Parentesco
            </th>
            <th>
                #
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.GrupoFamiliar.Count() > 0)
        {
            foreach (var item in Model.GrupoFamiliar)
            {
                <tr>
                    
                    <td id="valorNombre">
                        @Html.DisplayFor(modelItem => item.InsfNombre)
                    </td>
                    <td id="valorDoc">
                        @Html.DisplayFor(modelItem => item.InsfNumdoc)
                    </td>
                    <td id="valorFec">
                        @Html.DisplayFor(modelItem => item.FechaNacimiento)
                    </td>

                    @if (item.InsfDiscapacitado == 1)
                    {
                        <td>
                            Si
                        </td>
                    }
                    else
                    {
                        <td>
                            No
                        </td>
                    }


                    <td id="valorP">
                        @Html.DisplayFor(modelItem => item.ParentescoDesc, new { id = "idSoloParentesco" })
                    </td>
                    <td>

                        <a onclick="jQueryModalGet('?handler=CreateOrEdit&id=@item.InsfNumdoc','Modificar')" class="btn btn-info text-white"> Modificar</a>
                        <form method="post" asp-page="Bandeja" asp-route-id="@item.InsfNumdoc" asp-page-handler="Delete" onsubmit="return jQueryModalDelete(this)" class="d-inline">
                            <button type="submit" class="btn btn-danger text-white"> Borrar</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>
                    <p>No hay datos para visualizar.</p>
                </td>
            </tr>

        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $("#customerTable").DataTable();
    });
</script>