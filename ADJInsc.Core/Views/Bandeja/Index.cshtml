                <thead>
                    <tr>

                        <th>
                            Nombre y Apellido
                        </th>
                        <th>
                            Número de Documento
                        </th>
                        <th>
                            Nacimiento
                        </th>
                        <th>
                            Discapacidad ?
                        </th>
                        <th>
                            Veterano Mal. ?
                        </th>
                        <th>
                            Minero ?
                        </th>
                        <th>
                            Parentesco
                        </th>
                        <th>
                            #
                        </th>
                    </tr>
                </thead>
                <tbody class="tbody">
                   
                       
                </tbody>
            </table>
            
        </div>

    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="btnCreate" type="submit" value="Actualizar Ficha" class="btn btn-primary" />
        </div>
    </div>


</form>
