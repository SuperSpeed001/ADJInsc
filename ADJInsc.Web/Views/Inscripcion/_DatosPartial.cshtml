@model ADJInsc.Web.Models.InscViewModel

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

@if (!string.IsNullOrEmpty(Model.InsNumdoc))
{
    <form id="idFormFamilia">

        <div class="form-group card">
            <h2 class="card-header"> Titular</h2>
            <div class="form-row card-body">
                <div class="form-group col-md-4">
                   
                    <input type="text" class="form-control" id="inputNombre" placeholder="Nombre" value="@Model.NombreVM">
                </div>
                <div class="form-group col-md-4">
                   
                    <input type="text" class="form-control" id="inputApellido" placeholder="Apellido" value="@Model.ApellidoVM">
                </div>
                <div class="form-group col-md-2">
                  
                    <input type="email" class="form-control" id="inputEmail" placeholder="Email" value="@Model.InsEmail">
                </div>
            </div>
            <div class="form-group row-cols-2 card-body">
               
                <input type="text" multiple class="form-control" id="inputAddress" placeholder="Dirección">
            </div>
            <div class="form-row card-body">
                <div class="form-group col-md-4">
                   
                    <input type="text" class="form-control" id="inputBarrio" placeholder="Barrio">
                </div>
                <div class="form-group col-md-4">
                    
                    <input type="text" class="form-control" id="inputLocalidad" placeholder="Localidad">
                </div>
                <div class="form-group col-md-2">
                  
                    <input type="text" class="form-control" id="inputDepartamento" placeholder="Departamento">
                </div>
            </div>
        </div>
    </form>
}

@Html.AntiForgeryToken()
<h3>Datos del Grupo Familiar</h3>
<table id="tablaFamilia" class="table table-striped table-responsive" cellspacing="0" width="100%">
    <!--table table-sm table-striped table-hover border-bottom table table-bordered mb-0-->
    <thead>
        <tr >

            <th>
                Nombre
            </th>
            <th>
                Tipo de Documento
            </th>
            <th>
                Número de Documento
            </th>
            <th>
                #
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.GrupoFamiliar.Count() > 0)
        {
            foreach (var item in Model.GrupoFamiliar)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.InsfNombre)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.InsfTipdoc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InsfNumdoc)
                    </td>

                    <td>
                        <button type="button" class="btn btn-indigo btn-sm m-0" data-toggle="modal" data-target="#modalAgregarFamilia">Agregar</button>                       
                    </td>
                </tr>
            }
        }
        else
        {
            if (!string.IsNullOrEmpty(Model.InsNumdoc))
            {
                <tr>
                    <td colspan="6" class="text-right">
                        <button type="button" class="btn btn-indigo btn-sm m-0" data-toggle="modal" data-target="#modalAgregarFamilia">Agregar</button>
                    </td>
                </tr>
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-right">
                        <button type="button" class="btn btn-indigo btn-sm m-0" data-toggle="modal" data-target="#modalAgregarTitular">Agregar</button>
                    </td>
                </tr>
            }

        }
    </tbody>
</table>


